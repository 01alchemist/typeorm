{
    "version": "1.8.0",
    "compilerOptions": {
        "lib": ["es5", "es6", "dom"],
        "outDir": "build/es5",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "declaration": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "stripInternal": true,
        "pretty": true,
        "strictNullChecks": true
    },
    "exclude": [
        "build",
        "node_modules",
        "typings/browser.d.ts",
        "typings/browser"
    ]
}
